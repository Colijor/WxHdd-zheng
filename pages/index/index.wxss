/**index.wxss**/
page{background-color: #f0f0f0;}
.authorizeHeader {
    margin: 0 0 50rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}
 
.authorizeHeader image {
    width: 200rpx;
    height: 200rpx;
    margin: 0 !important;
}
 
.authorizeContent {
    margin-left: 50rpx;
    margin-right: 50rpx;
    margin-bottom: 90rpx;
}
.authorizeInfo{
  display: flex;
  align-items: flex-start;
  margin-top: 50rpx;
}
.authorizeInfo image{
  width: 50rpx;
  height: 50rpx;
  margin: 0 !important;
}
.authorizeInfo text {
    display: inline-block;
    margin-left: 20rpx;
    font-size: 30rpx;
}
 
.authorizeBottom {
    text-align: center;
    margin-top: 300rpx;
}
.authorizeBottom button{
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.authorize{
  position: absolute;
  z-index: 1000;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

