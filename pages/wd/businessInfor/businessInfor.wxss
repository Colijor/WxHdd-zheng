.modal .info {
  font-size: 28rpx;
  background-color: #fff;
  padding: 30rpx;
}

.modal .info .bus_top{
  margin-bottom: 30rpx;
}

.modal .info .bus_title{
  font-size: 40rpx;
  font-weight: 700;
}

.modal .info .bus_info{
  display: flex;
  font-size: 30rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.modal .info .bus_info .title{
  flex: 0.8;
  font-weight: 700;
}

.modal .info .bus_info .content{
  flex: 3;
}

.modal .info .bus_address{
  margin: 30rpx 0;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}
