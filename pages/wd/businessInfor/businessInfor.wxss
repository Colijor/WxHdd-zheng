.modal .info {
  font-size: 28rpx;
  background-color: #fff;
  padding: 30rpx;
}

.modal .info .bus_top{
  margin-bottom: 30rpx;
}

.modal .info .bus_title{
  font-size: 40rpx;
  font-weight: 700;
}

.modal .info .bus_info{
  display: flex;
  font-size: 30rpx;
  height: 74rpx;
  line-height: 74rpx;
  border-bottom: 1rpx solid #eee;
}

.modal .info .bus_info .title{
  flex: 0.8;
  font-weight: 700;
}

.modal .info .bus_info .content{
  flex: 3;
}

.modal .info .bus_content{
  margin: 30rpx 0;
  height: 74rpx;
  line-height: 74rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
}

.modal .info .bus_address{
  width: 90%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  border-right: 1rpx solid #eee;
}

.modal .info .bus_phone{
  width: 10%;
  text-align: right;
}
.modal .info .bus_phone>text{
  font-size: 40rpx;
}
.modal .info {
  margin-bottom: 40rpx;
}