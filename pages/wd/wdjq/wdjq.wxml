<view class='ticket_wrap' wx:for="{{contentlist}}" wx:if="{{item.used == 1}}" wx:key="{{item.id}}"  data-animaltype="{{item.worth}}"  data-create="{{item.createTime}}" data-scene="{{item.sceneCode}}">
