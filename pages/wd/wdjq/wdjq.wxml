    </view>
    <view class='info_btn' bindtap='toggleBtn' data-flag='false' id='{{item.id}}'>使用提示<text class="iconfont icon-less"></text></view>
  </view>

  <view class="info {{uhide==item.id?'':'infoH'}}" wx:if="{{item.description}}">
